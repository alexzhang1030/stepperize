{
	"name": "@stepperize/react",
	"version": "1.0.3",
	"private": false,
	"publishConfig": {
		"access": "public"
	},
	"sideEffects": false,
	"files": [
		"dist"
	],
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.mjs",
			"require": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"lint": "turbo lint",
		"prepublishOnly": "pnpm run build",
		"clean": "rm -rf .turbo && rm -rf node_modules dist"
	},
	"dependencies": {
		"@stepperize/core": "workspace:*"
	},
	"peerDependencies": {
		"react": "^18.3.1"
	},
	"devDependencies": {
		"@types/react": "^18.3.3",
		"@types/react-dom": "^18.3.0",
		"react": "^18.3.1",
		"tsup": "^8.2.4",
		"typescript": "^5.5.4"
	}
}
