{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"files": {
		"ignore": [
			"./.turbo",
			"./.next",
			"./.changeset",
			"./.pnpm-store",
			"**/dist"
		]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"useKeyWithClickEvents": "off"
			},
			"nursery": {
				"useSortedClasses": "off"
			},
			"style": {
				"useBlockStatements": "error"
			},
			"suspicious": {
				"noConsoleLog": "error",
				"noExplicitAny": "off"
			},
			"correctness": {
				"noUnusedVariables": "error",
				"noUnusedImports": "error"
			}
		}
	}
}
